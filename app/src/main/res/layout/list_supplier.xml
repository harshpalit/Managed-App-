<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_margin="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:id="@+id/supp_id"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            tools:text="5"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/primary_text"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/supp_name"
                    android:inputType="textCapWords"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="SUpplier Company Name"
                    android:textSize="18sp"/>
                <TextView
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/supp_regno"
                    tools:text="6416561dsafsf"/>
            </LinearLayout>
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/secondary_text"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/supp_add1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Address Line 1"/>
                <TextView
                    android:textColor="@color/secondary_text"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/supp_add2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Address line 2"/>
            <LinearLayout
                android:textColor="@color/secondary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/supp_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="City"/>
                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/supp_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="State"/>
                <TextView
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/supp_pincode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="-603203"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/primary_text"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/supp_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Mob No:9175648254"/>
            <TextView
                android:textColor="@color/primary_text"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/supp_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="suppliername@domain.com"/>

    </LinearLayout>

</LinearLayout>
    </LinearLayout>